{% extends 'base.html.twig' %}

{% block title %}Hello AccountAddressController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if app.user.addresses|length == 0 %}
    <div>
        <p>vous n'avez pas d'adresses <a href="{{ path('add_account_address') }}">cliquez ici</a></p>
    </div>
    {% else %}
    <div>
        <div class="row">
            {% for address in app.user.addresses %}
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ address.name }}</h5>
                        <p class="card-text">{{ address.address }}</p>
                        <p class="card-text">{{ address.postal }} - {{ address.city }} - {{ address.country }}</p>
                        <a href="{{ path('edit_account_address', {'id' : address.id} ) }}">Modifier</a> | <a href="{{ path('delete_account_address', {'id' : address.id} ) }}">Supprimer</a>
                    </div>
                </div>
            </div>
            {% endfor %}
            <div>
                <p><a href="{{ path('add_account_address') }}">Ajouter une nouvelle addresse</a></p>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
