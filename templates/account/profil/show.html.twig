{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <h1>Profil de {{ profil.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Pseudo</th>
                <td>{{ profil.name }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td> <img style="width: 80px; height: 80px" src="{{ asset('assets/profil/pictures/') }}{{ profil.picture }}" alt="photo_profil"></td>
            </tr>
            <tr>
                <th>Contrôle Parental</th>
                {% if profil.control != 0%}
                    <td>Actif</td>
                {% else %}
                    <td>Inactif</td>
                {% endif %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('profil_index') }}">Retour à la liste</a>

    <a href="{{ path('profil_edit', {'id': profil.id}) }}">Modifier</a>

    {{ include('account/profil/_delete_form.html.twig') }}
{% endblock %}
