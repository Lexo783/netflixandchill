{% extends 'base.html.twig' %}

{% block title %}Mon Compte!{% endblock %}

{% block body %}
    {% include 'header/header.html.twig' %}
    <div class="background_account">
        <div class="view_account">
            <h1>Compte</h1>
            <hr style="color: black">
            <div class="informations_user">
                <h3>Informations de mon compte </h3>
                {#<img src="{{ asset('assets/profil/pictures/') }}{{ app.user.picture }}" alt="photo_profil">#}
                <p>Nom : {{ app.user.lastName }}</p>
                <p>Prenom : {{ app.user.firstName }}</p>
                <p><span>Email : {{ app.user.email }}</span><a class="change" href="{{ path('account_mail') }}">Changer mon Email</a></p>
                <p>Naissance : {{ app.user.birthday |date('d-m-Y') }}</p>
                <p><span>Pseudo : {{ app.user.pseudo }}</span><a class="change" href="{{ path('account_pseudo') }}">Changer mon pseudo</a></p>
                <p class="p_mdp"><a class="change" href="{{ path('account_password') }}">Changer de mot de passe</a></p>
            </div>
            <hr>
            <div>
                <h3>Gestion des profils </h3>
                <a href="{{ path('profil_new') }}"> Cr√©er un nouveau profil </a>
                <a href="{{ path('profil_index') }}"> Gestion des profils </a>
            </div>
        </div>
    </div>

    <div class="footer_account">
        {% include 'footer/footer.html.twig' %}
    </div>
{% endblock %}
