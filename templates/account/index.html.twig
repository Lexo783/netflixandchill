{% extends 'base.html.twig' %}

{% block title %}Mon Compte!{% endblock %}

{% block body %}
    <h1>Mon Compte</h1>

    <div class="informations_user">
        <p>Bonjour {{ app.user.pseudo }} </p>

        <h3>Informations de mon compte </h3>
        {#<img src="{{ asset('assets/profil/pictures/') }}{{ app.user.picture }}" alt="photo_profil">#}
        <p>Nom : {{ app.user.lastName }}</p>
        <p>Prenom : {{ app.user.firstName }}</p>
        <p><span>Email : {{ app.user.email }}</span><a href="{{ path('account_mail') }}">Changer mon Email</a></p>
        <p>Naissance : {{ app.user.birthday |date('d-m-Y') }}</p>
        <p><span>Pseudo : {{ app.user.pseudo }}</span><a href="{{ path('account_pseudo') }}">Changer mon pseudo</a></p>
        <p><a href="{{ path('account_password') }}">Changer de mot de passe</a></p>
    </div>
{% endblock %}
