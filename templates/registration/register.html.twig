{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="background_register">
        <div class="titreLogo">
            <a class="navbar-brand" href="/">
                <img src="assets/img/netflix_logo.png" width="167px" height="90">
            </a>
        </div>
        <div class="form_center">
            <h1 class="register_title">Register</h1>

            {{ form_start(registrationForm) }}
            <p class="title_textbox">
                Email
                {{ form_row(registrationForm.email) }}
            </p>
            <p class="title_textbox">
                Password
                {{ form_row(registrationForm.plainPassword) }}
            </p>
            <p class="title_textbox">
                Last Name
                {{ form_row(registrationForm.lastName) }}
            </p>
            <p class="title_textbox">
                First Name
                {{ form_row(registrationForm.firstName) }}
            </p>
            <p class="title_textbox">
                Birthday
                {{ form_row(registrationForm.birthday) }}
            </p>
            <p class="title_textbox">
                Pseudo
                {{ form_row(registrationForm.pseudo) }}
            </p>
            <p class="title_textbox">
                Picture
                {{ form_row(registrationForm.picture) }}
            </p>
            <div class="areaAgree">
                {{ form_row(registrationForm.agreeTerms) }}
                <p class="agree">Agree Terms</p>
            </div>

            <button type="submit" class="btn_register">Register</button>
        </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}


