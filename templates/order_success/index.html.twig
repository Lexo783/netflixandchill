{% extends 'base.html.twig' %}

{% block title %}Hello OrderValidateController!{% endblock %}
{% block stylesheets %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif;background-color: white; padding: 5px; border-radius: 5px }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
{% endblock %}
{% block body %}
<div class="example-wrapper">
    <h2>Confirmation de commande</h2>
    <p>Bonjour <strong>{{ order.user.firstName }} {{ order.user.lastName }}</strong>,<br/><br/>
        Nous vous remercions pour votre commande n°{{ order.reference }}.<br/>
        Une confirmation vient de vous être envoyée par email à l'adresse <strong>{{ order.user.email }}</strong>.
    </p>
</div>
{% endblock %}
