{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="background_login">
        <form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

        <div class="titreLogo">
            <a class="navbar-brand" href="/">
                <img src="assets/img/netflix_logo.png" width="167px" height="90">
            </a>
        </div>
        <div class="form_center">
    <h1 class="register_title">Please sign in</h1>
    <p class="title_textbox">
        Email
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control textbox" required autofocus>
    </p>

    <p class="title_textbox">
        Password
        <input type="password" name="password" id="inputPassword" class="form-control textbox" required>
    </p>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <button class="btn_register" type="submit">
        Sign in
    </button>
        </div>
        </form>
    </div>
{% endblock %}
